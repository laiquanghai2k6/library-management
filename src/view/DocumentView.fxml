<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="450.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.DocumentView">

    <!-- Title -->
    <Label style="-fx-alignment: center;" text="Tài liệu" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="10">
        <font>
            <Font size="26" />
        </font>
    </Label>

    <Button onAction="#Back" prefHeight="30" prefWidth="90" text="Quay lại" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" />

    <Label style="-fx-font-weight: bold; -fx-font-size: 14;" text="Thêm tài liệu" AnchorPane.leftAnchor="10" AnchorPane.topAnchor="50" />

    <!-- Form  -->

    <Label text="Tiêu đề:" AnchorPane.leftAnchor="10" AnchorPane.topAnchor="80" />
    <TextField fx:id="title" prefWidth="200" AnchorPane.leftAnchor="70" AnchorPane.topAnchor="75" />

    <Label text="Tác giả:" AnchorPane.leftAnchor="290" AnchorPane.topAnchor="80" />
    <TextField fx:id="author" prefWidth="230" AnchorPane.leftAnchor="340" AnchorPane.topAnchor="75" />

    <Label text="ISBN:" AnchorPane.leftAnchor="10" AnchorPane.topAnchor="115" />
    <TextField fx:id="isbn" prefWidth="150" AnchorPane.leftAnchor="70" AnchorPane.topAnchor="110" />

    <Label text="Danh mục:" AnchorPane.leftAnchor="230" AnchorPane.topAnchor="115" />
    <TextField fx:id="category" prefWidth="80" AnchorPane.leftAnchor="310" AnchorPane.topAnchor="110" />

    <Label text="Số lượng:" AnchorPane.leftAnchor="410" AnchorPane.topAnchor="115" />
    <TextField fx:id="quantity" prefWidth="60" AnchorPane.leftAnchor="470" AnchorPane.topAnchor="110" />

    <!-- buttons -->
    <Button fx:id="addDocs" onAction="#add" prefHeight="30" prefWidth="100" text="Thêm" AnchorPane.leftAnchor="10" AnchorPane.topAnchor="150" />

    <Button fx:id="clearFields" prefHeight="30" prefWidth="100" text="Xóa" AnchorPane.leftAnchor="120" AnchorPane.topAnchor="150" />

    <Label style="-fx-font-weight: bold; -fx-font-size: 14;" text="Danh sách tài liệu" AnchorPane.leftAnchor="10" AnchorPane.topAnchor="190" />

    <!-- bảng danh sách tài liệu -->
    <TableView fx:id="docsTable" AnchorPane.bottomAnchor="50" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="220">
        <columns>
            <TableColumn fx:id="idColumn" prefWidth="50" text="ID" />
            <TableColumn fx:id="titleColumn" prefWidth="140" text="Tiêu đề" />
            <TableColumn fx:id="authorColumn" prefWidth="140" text="Tác giả" />
            <TableColumn fx:id="isbnColumn" prefWidth="100" text="ISBN" />
            <TableColumn fx:id="categoryColumn" prefWidth="80" text="Danh mục" />
            <TableColumn fx:id="quantityColumn" prefWidth="80" text="Số lượng" />
        </columns>
    </TableView>

    <Button fx:id="updateButton" onAction="#update" prefHeight="30" prefWidth="90" text="Cập nhật" AnchorPane.bottomAnchor="10" AnchorPane.rightAnchor="10" />
</AnchorPane>
