<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="450.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="view.DocumentView">

    <!-- Title -->
    <Label text="Tài liệu" 
           AnchorPane.topAnchor="10" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
           style="-fx-alignment: center;" >
        <font>
            <Font size="26"/>
        </font>
    </Label>

    <Button text="Quay lại" onAction="#Back" 
            AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" 
            prefWidth="90" prefHeight="30"/>

    <Label text="Thêm tài liệu" 
           AnchorPane.topAnchor="50" AnchorPane.leftAnchor="10"
           style="-fx-font-weight: bold; -fx-font-size: 14;" />

    <!-- Form  -->

    <Label text="Tiêu đề:" AnchorPane.topAnchor="80" AnchorPane.leftAnchor="10"/>
    <TextField fx:id="titleField" AnchorPane.topAnchor="75" AnchorPane.leftAnchor="70" prefWidth="200" />

    <Label text="Tác giả:" AnchorPane.topAnchor="80" AnchorPane.leftAnchor="290"/>
    <TextField fx:id="authorField" AnchorPane.topAnchor="75" AnchorPane.leftAnchor="340" prefWidth="230" />

    <Label text="ISBN:" AnchorPane.topAnchor="115" AnchorPane.leftAnchor="10" />
    <TextField fx:id="isbnField" AnchorPane.topAnchor="110" AnchorPane.leftAnchor="70" prefWidth="150" />

    <Label text="ID Danh mục:" AnchorPane.topAnchor="115" AnchorPane.leftAnchor="230" />
    <TextField fx:id="categoryIDField" AnchorPane.topAnchor="110" AnchorPane.leftAnchor="310" prefWidth="80" />

    <Label text="Số lượng:" AnchorPane.topAnchor="115" AnchorPane.leftAnchor="410" />
    <TextField fx:id="quantityField" AnchorPane.topAnchor="110" AnchorPane.leftAnchor="470" prefWidth="60" />

    <!-- buttons -->
    <Button fx:id="addDocs" text="Thêm" 
            AnchorPane.topAnchor="150" AnchorPane.leftAnchor="10" 
            prefWidth="100" prefHeight="30" />

    <Button fx:id="clearFields" text="Xóa" 
            AnchorPane.topAnchor="150" AnchorPane.leftAnchor="120" 
            prefWidth="100" prefHeight="30" />

    <Label text="Danh sách tài liệu" 
           AnchorPane.topAnchor="190" AnchorPane.leftAnchor="10"
           style="-fx-font-weight: bold; -fx-font-size: 14;" />

    <!-- bảng danh sách tài liệu -->
    <TableView fx:id="docsTable" AnchorPane.topAnchor="220" AnchorPane.leftAnchor="10" 
               AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="50" >
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="50" />
            <TableColumn fx:id="titleColumn" text="Tiêu đề" prefWidth="140" />
            <TableColumn fx:id="authorColumn" text="Tác giả" prefWidth="140" />
            <TableColumn fx:id="isbnColumn" text="ISBN" prefWidth="100" />
            <TableColumn fx:id="categoryIDColumn" text="ID Danh mục" prefWidth="80" />
            <TableColumn fx:id="quantityColumn" text="Số lượng" prefWidth="80" />
        </columns>
    </TableView>

    <Button fx:id="updateButton" text="Cập nhật" 
            AnchorPane.bottomAnchor="10" AnchorPane.rightAnchor="10" 
            prefWidth="90" prefHeight="30"/>
</AnchorPane>
